generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model url {
    id         Int      @id @default(autoincrement())
    long_url   String   @db.VarChar
    short_url  String   @db.VarChar
    created_at DateTime @default(now()) @db.Timestamp()
}
